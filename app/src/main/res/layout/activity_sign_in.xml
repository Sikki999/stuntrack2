<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B76C0"
    android:orientation="vertical"
    tools:context=".signIn">

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/img_5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Selamat Datang!"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk untuk melanjutkan"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textSize="16sp"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint=" Masukkan email "
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/white"
            android:inputType="textEmailAddress"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textSize="16sp"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:hint=" Masukkan password "
            android:background="@color/white"
            android:inputType="text"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txt_lupaPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contoh2"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginStart="100dp"
        android:layout_marginTop="6dp"
        android:layout_gravity="center"
        android:layout_marginEnd="60dp"
        android:textSize="16sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_masuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_desk3"
        app:cornerRadius="30dp"
        android:text="Masuk"
        android:textAllCaps="false"
        app:backgroundTint="@color/white"
        android:layout_marginStart="60dp"
        android:textColor="#3B76C0"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        />


    <LinearLayout
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Belum punya akun?"
            android:layout_marginStart="70dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_daftar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/contoh3"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mtrlForm"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="40dp"
        android:backgroundTint="@color/white">

        <TextView
            android:id="@+id/txt_deskmasuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="masuk dengan sosial media"
            android:textColor="#A1A1A1"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="50dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_facebook"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/img_google"
                android:layout_marginTop="50dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_google"
                android:layout_weight="1"
                />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>